<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#CEF6F5"
    tools:context="com.example.ksanchez.enapp.activities.MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#0404B4"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="20"

            android:text="@string/tituloToken"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_material"
            android:layout_marginRight="@dimen/margin_material"
            android:background="@drawable/fondo_final_enedu"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:layout_marginLeft="@dimen/margin_material"
                android:layout_marginRight="@dimen/margin_material"

                android:id="@+id/content_referencia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center">

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:orientation="horizontal"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingTop="40dp"
                    android:scaleType="fitCenter">


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:paddingTop="@dimen/layout_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <TextView
                    android:layout_marginTop="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/texto_grande"
                    android:textStyle="bold"
                    android:text="Ingrese Token"
                    android:textAlignment="center"
                    android:textColor="#0404B4"/>
                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/txtToken"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:padding="5dp"

                    android:background="@drawable/borde_pregunta_enedu"
                    android:inputType="numberPassword"
                    />

                <Button
                    android:id="@+id/btnIngresar"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Ingresar"
                    android:textColor="#0404B4"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSincronizar"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Sincronizar"
                    android:background="@color/lightGreenAccent"
                    android:textColor="#0404B4"
                    android:textSize="18dp"
                    android:visibility="invisible"
                    android:textStyle="bold" />





            </LinearLayout>
    </LinearLayout>


</LinearLayout>
